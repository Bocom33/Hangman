{% extends 'base.html.twig' %}

{% block title %}Hello WordController!{% endblock %}

{% block body %}
    {% block body %}
        {% for type, flash in app.flashes %}
            {% for message in flash %}
                <span class="{{ type }}">{{ message }}</span>
            {% endfor %}
        {% endfor %}
    <form action="{{ path('word_check') }}">
        <input type="text" name="letter">
        <button>Check</button>
    </form>
    <form action="{{ path('word_replay') }}">
        <button>Replay</button>
    </form>
    {% if game.step == 1 %}
        <img id="stick1" src="https://i.imgur.com/ZUh0WSK.png">
    {% endif %}
    {% if game.step == 2 %}
        <img id="stick2" src="https://i.imgur.com/zn1TZsc.png">
    {% endif %}
    {% if game.step == 3 %}
